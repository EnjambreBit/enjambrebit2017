{{#if (media 'isMobile')}}
  {{#if sidebarVisible}}
    <div class="bg-black-50 z-max fixed absolute--fill center" {{action "ocultarSidebar"}}>
      <div class="ui fixed inverted vertical red menu ebit-mobile-menu" style="bottom: 0" {{action "ocultarSidebar"}}>
        <EbitSeccionesDelMenu />
      </div>
    </div>
  {{/if}}

  <a class="launch icon item" {{action 'mostrarSidebar'}}>
    <img class="ui mini image" height="15" src="/assets/enjambre-bit_logo-menu.png">
  </a>

{{else}}
  <LinkTo @route="app.index" @tagName="div" class="item logo-container" @current-when="index">
    <img class="ui fluid image" src="/assets/enjambre-bit_logo-menu.png" height=35>
  </LinkTo>
  <EbitSeccionesDelMenu />
  <div class="ui right menu">
    <EbitRedes />
  </div>
{{/if}}

{{yield}}
